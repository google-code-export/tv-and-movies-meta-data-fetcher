<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <programGroup defaultName="Media Manager/Media Manager" location="startMenu"/>

   <shortcut
     name="Media Manager CLI Documentation (HTML)"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="xdg-open"
     commandLine="$INSTALL_PATH/docs/html/index.html"
     type="Application"
     encoding="UTF-8"
	 initialState="noShow"
     description="The command line documentation in HTML format">     
   </shortcut>

   <shortcut
     name="Media Manager CLI Documentation (PDF)"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="xdg-open"     
     commandLine="$INSTALL_PATH/docs/pdf/userguide.pdf"
     url="$INSTALL_PATH/docs/pdf/userguide.pdf"
     type="Application"
     encoding="UTF-8"
     description="The command line documentation in PDF format">
   </shortcut>

   <shortcut
     name="Media Manager Uninstall"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="java"
     commandLine="-jar &quot;$INSTALL_PATH/Uninstall/remove.task&quot;"
     initialState="noShow"
     iconFile="trashcan_full"
     iconIndex="0"
     type="Application"
     encoding="UTF-8"
     description="Uninstaller">
   </shortcut> 
</shortcuts>
